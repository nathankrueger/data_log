{
    "node_id": "pz2w1-indoor-gateway",
    "dashboard_url": "http://192.168.1.100:5000",
    "local_sensors": [
        {"class": "BME280TempPressureHumidity"}
    ],
    "local_sensor_interval_sec": 5,
    "lora": {
        "enabled": true,
        "frequency_mhz": 915.0,
        "cs_pin": 24,
        "reset_pin": 25
    },
    "led": {
        "red_bcm": 17,
        "green_bcm": 27,
        "blue_bcm": 22,
        "common_anode": true,
        "flash_on_recv": true,
        "flash_color": [255, 0, 0],
        "flash_duration_sec": 0.1
    },
    "display": {
        "enabled": true,
        "advance_switch_pin": 16,
        "scroll_switch_pin": 26,
        "i2c_port": 1,
        "i2c_address": 60,
        "refresh_interval": 0.5
    },
    "command_server": {
        "enabled": true,
        "port": 5001,
        "max_queue_size": 128,
        "max_retries": 10,
        "initial_retry_ms": 300,
        "retry_multiplier": 1.1,
        "max_retry_ms": 5000
    }
}
